<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealGridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#5F9EA0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/guard"
                android:src="@drawable/guard"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guard"
                android:layout_centerHorizontal="true"
                android:text="Guard"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#D2691E">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/arch"
                android:src="@drawable/arch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arch"
                android:layout_centerHorizontal="true"
                android:text="Arch"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#CD5C5C">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/eiffel"
                android:src="@drawable/eiffel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eiffel"
                android:layout_centerHorizontal="true"
                android:text="Eiffel"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#B8860B">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/money"
                android:src="@drawable/money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money"
                android:layout_centerHorizontal="true"
                android:text="Money"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#2E8B57">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pisa"
                android:src="@drawable/pisa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pisa"
                android:layout_centerHorizontal="true"
                android:text="Pisa"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="#BC8F8F">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/stonehenge"
                android:src="@drawable/stonehenge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stonehenge"
                android:layout_centerHorizontal="true"
                android:text="Stonehenge"/>
        </RelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

</com.google.android.material.circularreveal.CircularRevealGridLayout>



implementation 'com.google.android.material:material:1.1.0-alpha10'